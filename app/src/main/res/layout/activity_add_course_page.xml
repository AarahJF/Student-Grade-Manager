<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20243C"
    tools:context=".AddCoursePage">

    <TextView
        android:id="@+id/TVAddHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Course Detail"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVAddHome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TVCourseID"
                android:layout_width="420dp"
                android:layout_height="match_parent"

                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:paddingTop="0dp"
                android:text="Course ID"
                android:textAlignment="textStart"
                android:textColor="#FFC107"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ETxtCourseID"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"

                android:background="#BDAC78"
                android:ems="10"
                android:hint="CO225"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="#504C4C"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TVCourseName"
                android:layout_width="420dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:paddingStart="10dp"

                android:text="Course Name"
                android:textAlignment="textStart"
                android:textColor="#FFC107"

                android:textSize="14sp" />

            <EditText
                android:id="@+id/ETxtCourseName"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="#BDAC78"
                android:ems="10"

                android:hint="Software Construction"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="#504C4C"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TVCourseCredits"
                android:layout_width="420dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="Course Credits"
                android:textAlignment="textStart"
                android:textColor="#FFC107"

                android:textSize="14sp" />

            <EditText
                android:id="@+id/ETxtCourseCredit"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="#BDAC78"
                android:ems="10"
                android:hint="3"

                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="#504C4C"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:orientation="horizontal"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/TVSEmesterName"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="Semester"
                android:textColor="#FFC107"

                />

            <EditText
                android:id="@+id/ETSemesterVal"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="#BDAC78"
                android:hint="2"
                android:paddingTop="5dp"

                android:textColor="@color/black"

                android:textColorHint="#504C4C"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:orientation="horizontal"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/TVLabMarks"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="Lab Marks"
                android:textColor="#FFC107"

                />

            <EditText
                android:id="@+id/ETLabMarks"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#BDAC78"
                android:layout_marginBottom="4dp"
                android:paddingTop="5dp"
                android:hint="15"

                android:textColor="@color/black"

                android:textColorHint="#504C4C"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:orientation="horizontal"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/TVAssignMarks"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="Assignment Marks"
                android:textColor="#FFC107"

                />

            <EditText
                android:id="@+id/ETAssignMarks"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="#BDAC78"
                android:hint="15"
                android:paddingTop="5dp"

                android:textColor="@color/black"

                android:textColorHint="#504C4C"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:orientation="horizontal"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/TVProjectMarks"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="Project Marks"
                android:textColor="#FFC107"

                />

            <EditText
                android:id="@+id/ETProjectMarks"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#BDAC78"
                android:layout_marginBottom="4dp"
                android:paddingTop="5dp"
                android:hint="30"

                android:textColor="@color/black"

                android:textColorHint="#504C4C"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:orientation="horizontal"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/TVMidMarks"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="Mid Marks"
                android:textColor="#FFC107"

                />

            <EditText
                android:id="@+id/ETMidMarks"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#BDAC78"
                android:layout_marginBottom="4dp"
                android:paddingTop="5dp"
                android:hint="0"

                android:textColor="@color/black"

                android:textColorHint="#504C4C"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TVEndMarks"
                android:layout_width="420dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="End Marks"

                android:textAlignment="textStart"
                android:textColor="#FFC107"

                android:textSize="14sp" />

            <EditText
                android:id="@+id/ETEndMarks"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="#BDAC78"
                android:ems="10"
                android:hint="40"

                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="#504C4C"
                android:textSize="14sp" />

        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"


            >

            <Button
                android:id="@+id/AddMoreBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"

                android:layout_weight="1"
                android:backgroundTint="@color/cardview_shadow_end_color"
                android:text="ADD" />

            <Button
                android:id="@+id/FinishBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"

                android:layout_weight="1"
                android:backgroundTint="@color/cardview_shadow_end_color"
                android:text="Finish" />


        </LinearLayout>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/proCourseViewPage"
        style="?android:attr/progressBarStyle"
        android:layout_width="34dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>